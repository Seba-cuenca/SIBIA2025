# Configuración para SIBIA Dashboard
# Copia este archivo como .env y completa los valores

# Entorno
ENVIRONMENT=production
FLASK_ENV=production
DEBUG=False

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sibia_dashboard?retryWrites=true&w=majority

# Configuración de la aplicación
SECRET_KEY=tu-clave-secreta-aqui
FLASK_SECRET_KEY=tu-flask-secret-key-aqui

# APIs externas (opcional)
OPENAI_API_KEY=tu-openai-api-key
GOOGLE_API_KEY=tu-google-api-key
ELEVENLABS_API_KEY=tu-elevenlabs-api-key

# URLs de la aplicación
APP_URL=https://tu-app.netlify.app
API_URL=https://tu-app.netlify.app/api

# Configuración de CORS
CORS_ORIGINS=https://tu-app.netlify.app,https://localhost:3000
