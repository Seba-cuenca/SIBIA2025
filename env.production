# Configuración para Producción - SIBIA Dashboard
# Copia este archivo como .env en Netlify

# Entorno
ENVIRONMENT=production
FLASK_ENV=production
DEBUG=False

# Base de datos MongoDB Atlas (Recomendado)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/sibia_dashboard?retryWrites=true&w=majority
DATABASE_URL=mongodb+srv://<username>:<password>@cluster.mongodb.net/sibia_dashboard

# Base de datos PostgreSQL (Alternativa)
# POSTGRES_HOST=your-postgres-host
# POSTGRES_PORT=5432
# POSTGRES_DB=sibia_dashboard
# POSTGRES_USER=your-username
# POSTGRES_PASSWORD=your-password

# Configuración de la aplicación
SECRET_KEY=your-super-secret-key-here
FLASK_SECRET_KEY=your-flask-secret-key-here

# APIs externas
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Twilio (opcional)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone

# Configuración de Netlify
NETLIFY_SITE_ID=your-netlify-site-id
NETLIFY_ACCESS_TOKEN=your-netlify-access-token

# URLs de la aplicación
APP_URL=https://your-app-name.netlify.app
API_URL=https://your-app-name.netlify.app/api

# Configuración de CORS
CORS_ORIGINS=https://your-app-name.netlify.app,https://localhost:3000

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Configuración de caché
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Configuración de sesiones
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Configuración de archivos
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Configuración de email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configuración de monitoreo (opcional)
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
